{
  "name": "builder",
  "repository": "https://github.com/luojinxu520/electron-lessons",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "wait-port": "^0.2.7",
    "webpack": "^4.41.6"
  },
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^22.3.2",
    "webpack-cli": "^3.3.11"
  },
  "homepage": "./",
  "main": "./build/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-main": "webpack",
    "dev": "concurrently \"wait-port http://localhost:3000 && electron .\" \"cross-env BROWSER=none npm start\"",
    "release": "cross-env GH_TOKEN=personal access token electron-builder",
    "prereleas": "npm run build && npm run build-main"
  },
  "author": {
    "name": "your name",
    "email": "your email"
  },
  "description": "this is  app",
  "build": {
    "appId": "builder",
    "productName": "builder.app",
    "copyright": "Copyright Â© 2020 ${author}",
    "extends": null,
    "directories": {
      "buildResources": "assets"
    },
    "publish": ["github"],
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${text}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "chris"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "files": [
      "build/**/*",
      "node_module/**/*",
      "package.json",
      "main.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
